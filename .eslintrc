{
	"extends": [
		"eslint:recommended",
		"plugin:import/errors",
		"plugin:jsx-a11y/strict",
		"plugin:react/recommended",
		"plugin:json/recommended-with-comments"
	],
	"plugins": ["babel", "import", "jsx-a11y", "react", "json"],
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 11,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true,
			"impliedStrict": false
		}
	},
	"env": {
		"browser": true,
		"es6": true,
		"es2017": true,
		"es2020": true,
		"node": true
	},
	"globals": {},
	"rules": {
		"max-len": [
			"error",
			{
				"code": 100,
				"tabWidth": 4,
				"ignoreComments": true,
				"ignoreTrailingComments": true,
				"ignoreUrls": true,
				"ignoreTemplateLiterals": true,
				"ignoreRegExpLiterals": true
			}
		],
		"max-depth": ["error", 2],
		"max-nested-callbacks": ["error", 3],
		"max-params": ["error", 3],
		"max-statements": ["error", 5],
		"max-lines": ["error", 200],
		"semi": ["error", "never"],
		"no-console": "error",
		"no-var": "error",
		"prefer-const": "error",
		"eol-last": ["error", "always"],

		// React
		"react/function-component-definition": ["error", { "namedComponents": "arrow-function" }],
		"react/jsx-no-literals": "off"
	}
}
